@model FlightManager.Model.Flight

@{
    ViewBag.Title = "Create";
    Layout = null;
}

<h2>Create</h2>


@using (Html.BeginForm())
{
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>Flight</legend>
        <div>
            <span>Departure Airport : </span>
            @Html.DropDownList("DepartureAirportID", new SelectList(ViewBag.DepartureAirport, "ID", "Name"), "Select departure airport")
        </div>
        <br />
        <div><span>Destination Airport : </span>
            @Html.DropDownList("DestinationAirportID", new SelectList(ViewBag.DestinationAirport, "ID", "Name"), "Select destination airport")
        </div>
        <br />
        <br />
        <p>
            <input type="submit" value="Create" />
            <input type="button" id="cancelAdd" value="Cancel" />
        </p>
    </fieldset>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}